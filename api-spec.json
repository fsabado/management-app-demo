            "put": {
                "summary": "Update task",
                "tags": [
                    "Tasks"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Project ID"
                    },
                    {
                        "in": "path",
