{
    "openapi": "3.0.0",
    "info": {
        "title": "Task Management API",
        "version": "1.0.0",
        "description": "API service for managing tasks and projects"
    },
    "servers": [
        {
            "url": "https://2d5cf928553b.ngrok-free.app",
            "description": "Ngrok tunnel"
        }
    ],
    "components": {
        "schemas": {
            "Project": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "Unique identifier for the project"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the project"
                    },
                    "tasks": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Task"
                        },
                        "description": "List of tasks in the project"
                    }
                }
            },
            "ProjectCreate": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the project"
                    }
                }
            },
            "ProjectUpdate": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the project"
                    }
                }
            },
            "Task": {
                "type": "object",
                "required": [
                    "id",
                    "projectId",
                    "name",
                    "status",
                    "dependsOn"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "Unique identifier for the task"
                    },
                    "projectId": {
                        "type": "integer",
                        "description": "ID of the project this task belongs to"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the task"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "planned",
                            "in progress",
                            "completed",
                            "cancelled"
                        ],
                        "description": "Status of the task"
                    },
                    "parentTaskId": {
                        "type": "integer",
                        "nullable": true,
                        "description": "ID of the parent task, if any"
                    },
                    "dependsOn": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "description": "List of task IDs this task depends on"
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date",
                        "nullable": true,
                        "description": "Start date of the task in ISO format (YYYY-MM-DD)"
                    },
                    "dueDate": {
                        "type": "string",
                        "format": "date",
                        "nullable": true,
                        "description": "Due date of the task in ISO format (YYYY-MM-DD)"
                    }
                }
            },
            "TaskCreate": {
                "type": "object",
                "required": [
                    "name",
                    "status"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the task"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "planned",
                            "in progress",
                            "completed",
                            "cancelled"
                        ],
                        "description": "Status of the task"
                    },
                    "parentTaskId": {
                        "type": "integer",
                        "nullable": true,
                        "description": "ID of the parent task, if any"
                    },
                    "dependsOn": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "description": "List of task IDs this task depends on",
                        "default": []
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date",
                        "nullable": true,
                        "description": "Start date of the task in ISO format (YYYY-MM-DD)"
                    },
                    "dueDate": {
                        "type": "string",
                        "format": "date",
                        "nullable": true,
                        "description": "Due date of the task in ISO format (YYYY-MM-DD)"
                    }
                }
            },
            "TaskUpdate": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the task"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "planned",
                            "in progress",
                            "completed",
                            "cancelled"
                        ],
                        "description": "Status of the task"
                    },
                    "parentTaskId": {
                        "type": "integer",
                        "nullable": true,
                        "description": "ID of the parent task, if any"
                    },
                    "dependsOn": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "description": "List of task IDs this task depends on"
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date",
                        "nullable": true,
                        "description": "Start date of the task in ISO format (YYYY-MM-DD)"
                    },
                    "dueDate": {
                        "type": "string",
                        "format": "date",
                        "nullable": true,
                        "description": "Due date of the task in ISO format (YYYY-MM-DD)"
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string",
                        "description": "Error message"
                    }
                }
            }
        }
    },
    "paths": {
        "/projects": {
            "get": {
                "summary": "List all projects",
                "description": "Returns all projects without their tasks",
                "tags": [
                    "Projects"
                ],
                "responses": {
                    "200": {
                        "description": "List of projects",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Project"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new project",
                "tags": [
                    "Projects"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProjectCreate"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Project created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/projects/{id}": {
            "get": {
                "summary": "Get project by ID",
                "tags": [
                    "Projects"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Project ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Project details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update project",
                "tags": [
                    "Projects"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Project ID"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProjectUpdate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Project updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete project",
                "description": "Deletes a project only if it has no tasks",
                "tags": [
                    "Projects"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Project ID"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Project deleted"
                    },
                    "400": {
                        "description": "Cannot delete project with tasks",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/projects/{id}/tasks": {
            "get": {
